<%= if @conn.assigns[:blog] do %>
  <header class="p-3">
    <div class="text-2xl"><%= @blog.name %></div>
    <div><%= raw @blog.subheading %></div>
  </header>
<% end %>

<main class="p-3">
  <%= for post <- @entries do %>
    <%= render "_post.html", conn: @conn, post: post %>
  <% end %>

  <%= render "_pagination.html", conn: @conn, page: @page, count: @count, page_count: @page_count %>
</main>